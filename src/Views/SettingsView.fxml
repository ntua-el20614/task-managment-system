<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>


<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Controllers.SettingsViewController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <Label text="Settings"/>
    <Button fx:id="btnNewCategory" text="Manage Categories" onAction="#handleNewCategory"/>
    <Button fx:id="btnNewPriority" text="Manage Priorities" onAction="#handleNewPriority"/>
    <Button fx:id="btnLogout" text="Logout" onAction="#handleLogout"/>
    <Button fx:id="btnClose" text="Close" onAction="#handleClose"/>
</VBox>
