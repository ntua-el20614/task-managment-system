<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.ReminderAlertController"
      style="-fx-background-color: linear-gradient(to bottom right, #1B2735, #090A0F); -fx-padding: 20; -fx-spacing: 15;">

    <Label fx:id="lblTitle" text="Task Title" 
           style="-fx-text-fill: #1FC8DB; -fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Label fx:id="lblDescription" text="Task Description" 
           style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
    
    <Label fx:id="lblDeadline" text="Deadline: YYYY-MM-DD" 
           style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
    
    <Label fx:id="lblReminderDate" text="Reminder Date: YYYY-MM-DD" 
           style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
    
    <Button fx:id="btnClose" text="Close" onAction="#handleClose" 
            style="-fx-background-color: #232323; -fx-text-fill: #1FC8DB; 
                   -fx-border-color: #1FC8DB; -fx-border-radius: 8; 
                   -fx-background-radius: 8;"/>
</VBox>
